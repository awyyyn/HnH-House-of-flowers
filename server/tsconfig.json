{
	"compilerOptions": {
		"target": "es2016",
		"module": "NodeNext",
		"rootDir": "./src",
		"rootDirs": ["./src"],
		"outDir": "./dist",
		// "allowImportingTsExtensions": true,
		// "emitDeclarationOnly": true,
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"skipLibCheck": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,

		"types": ["node"]
	}
}
